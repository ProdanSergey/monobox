{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"]
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "dist"]
}
